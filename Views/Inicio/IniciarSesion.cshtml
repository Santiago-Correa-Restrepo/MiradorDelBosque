@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center" ">
            <div class="col-12 col-xl-4 col-md-6">
                <div class="card" style=" background-color: rgb(234, 233, 233)">
                    <div class="card-header" style="background-color: #23322D; color:white; text-align: center;">
                        Iniciar Sesion
                    </div>
                    <div class="card-body">
                        <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="contrasena" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-success" type="submit">
                                    Iniciar Sesion
                                </button>
                            </div>
        @if (ViewData["mensaje"] != null)
        {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                    @ViewData["mensaje"]
                                    </div>
                                </div>
        }
                            <div class="d-flex justify-content-between ">
        @* <p>¿No tienes una cuenta? <a href="@Url.Action("Registrarse","Inicio")">Regístrate!</a></p> *@
                                <p style="color: black;">¿Olvidaste tu contraseña? <button class="btn btn-success"><a class="text-decoration-none border-0 px-4" style="color:white; " href="@Url.Action("RecuperarContrasena", "Inicio")">Recupérala aquí</a></button></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>