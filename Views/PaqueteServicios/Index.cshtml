@model IEnumerable<Ultima.Models.PaqueteServicio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oPaquete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.oServicio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Costo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.oPaquete.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.oServicio.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPaqueteServicio">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPaqueteServicio">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPaqueteServicio">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
