@model IEnumerable<Ultima.Models.Permiso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Permisos</h1>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a class="btn btn-success" asp-action="Create">Crear</a>
</p>
<table class="table" style="width: 60%; margin: 100px auto; background-color: #EFEAD8; color: #000;">
    <thead>
        <tr style="background-color: #004225; color: #FFFFFF;">
            <th style="padding: 10px; font-weight: bold; text-align: left;">
                @Html.DisplayNameFor(model => model.NomPermiso)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.PermisosSeleccionados)
            </th> *@
            <th style="padding: 10px; font-weight: bold; text-align: left;">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: #F5F0D7;">
                <td style="padding: 10px; text-align: left;">
                    @Html.DisplayFor(modelItem => item.NomPermiso)
                </td>
                @* <td>
                @Html.DisplayFor(modelItem => item.PermisosSeleccionados)
            </td> *@
                <td style="padding: 10px; text-align: left;">
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td style="padding: 10px; text-align: center;">
                    <a asp-action="Edit" asp-route-id="@item.IdPermiso" style="color: #FFFFFF; background-color: #004225; padding: 5px 10px; border-radius: 5px; text-decoration: none; margin-right: 5px;">
                        ✏️
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdPermiso" style="color: #FFFFFF; background-color: #004225; padding: 5px 10px; border-radius: 5px; text-decoration: none; margin-right: 5px;">
                        📄
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdPermiso" style="color: #FFFFFF; background-color: #004225; padding: 5px 10px; border-radius: 5px; text-decoration: none;">
                        🗑️
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
