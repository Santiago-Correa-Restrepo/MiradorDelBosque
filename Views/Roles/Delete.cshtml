            <!-- Selección de rol -->
            <div class="form-group mb-3">
                <label asp-for="NomRol" class="control-label text-white">Seleccionar Rol</label>
                <select asp-for="NomRol" class="form-control bg-light" style="background-color: #F5F0D7;">
                    <option>Administrador</option>
                    <option>Recepcionista</option>
                    @* <option>Cliente</option> *@
                </select>
                <span asp-validation-for="NomRol" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="form-check form-switch mb-3">
                <label asp-for="Estado" class="form-label text-white mb-2">Estado</label>
                @Html.CheckBoxFor(model => model.Estado, new { @class = "form-check-input", @id = "flexSwitchCheckChecked" })
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

