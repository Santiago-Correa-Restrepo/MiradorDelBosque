@model Ultima.Models.Usuario
<link href="~/css/Usuarios.css" rel="stylesheet" />
<link href="~/css/Usuarios.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text text-center">Detalles Usuario</h1>


<div class="form-container">

    <dl class="row">
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.NroDocumento)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.NroDocumento)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.TipoDocumento)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.TipoDocumento)
        </dd>
        @*  <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.IdTipoDocumento)
        </dt> *@
        @* <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.IdTipoDocumento)
        </dd> *@
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Celular)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.Celular)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        @* <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Contrasena)
        </dt> *@
        @* <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Contrasena)
        </dd> *@
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-5">
            @if (Model.Estado)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.IdRolNavigation)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.IdRolNavigation.NomRol)
        </dd>
    </dl>
    <hr>
    <div>
       
        <a class="btn btn-secondary" asp-action="Index">Salir</a>
    </div>
</div>