@model Ultima.Models.Usuario
<link href="~/css/Usuarios.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-dark">Eliminar</h1>

<div class="form-container">

    <dl class="row">
        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Nombres)</dt>
        <dd class="col-sm-5">@Html.DisplayFor(model => model.Nombres)</dd>
        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Apellidos)</dt>
        <dd class="col-sm-5">@Html.DisplayFor(model => model.Apellidos)</dd>
        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Correo)</dt>
        <dd class="col-sm-5">@Html.DisplayFor(model => model.Correo)</dd>
        <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd class="col-sm-5">
            @if (Model.Estado)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="NroDocumento" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>