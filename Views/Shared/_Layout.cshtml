<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ultima</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    @* <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" asp-append-version="true" /> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @* <link rel="stylesheet" href="~/css/style.css" asp-append-version="true"> *@
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@

    
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div id="sidebar" class="text-white p-3 vh-100" style="background-color: #23322D; width: 250px; display: none; position: fixed; z-index: 1040; top: 0; left: 0;">
            <h4 class="logo" ></h4>
            <ul class="navbar-nav flex-grow-1 my-5">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Roles" asp-action="Index">
                        <span class="icon"><i class="fas fa-user-shield"></i></span>
                        <span class="item">Roles</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Index">
                        <span class="icon">
                            <i class="fas fa-user"></i>
                        </span>
                        <span class="item">Usuarios</span>
                    </a>
                </li>
                <div class="dropdown">
                    <button class="nav-link text-white dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-bed"></i> Habitaciones
                    </button>
                    <ul class="dropdown-menu" style="background-color: #23322D;">
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="Habitaciones" asp-action="Index">
                                <i class="fas fa-bed"></i> Habitaciones
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="TipoHabitaciones" asp-action="Index">
                                <i class="fas fa-hotel"></i> Tipo de habitaciones
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="dropdown">
                    <button class="nav-link text-white dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-bed"></i> Servicios
                    </button>
                    <ul class="dropdown-menu" style="background-color: #23322D;">

                <li class="nav-item">
                    <a class="dropdown-item" asp-area="" asp-controller="Servicios" asp-action="Index">
                        <i class="fas fa-concierge-bell"></i> Servicios
                    </a>
                </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-controller="TipoServicios" asp-action="Index">
                                <i class="fas fa-concierge-bell"></i> Tipo Servicios
                            </a>
                        </li>
                    </ul>
                </div>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Paquetes" asp-action="Index">
                        <i class="fas fa-box"></i> Paquetes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Index">
                        <i class="fas fa-users"></i> Clientes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Reservas" asp-action="Index">
                        <i class="fas fa-calendar-check"></i> Reservas
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Agregar el CSS al final -->
    <style>
        /* Estilo para el fondo del sidebar */
        #sidebar {
            transition: all 0.3s ease;
        }

            /* Efecto de hover en los elementos del menú */
            #sidebar .nav-item:hover {
                background-color: #5f955d; /* Cambia este color al que desees para el hover */
                border-radius: 5px;
            }

            /* Efecto de hover en los enlaces */
            #sidebar .nav-link:hover {
                color: #ffffff; /* Cambia el color del texto al pasar el ratón */
                background-color: #5f955d; /* Cambia el color de fondo del enlace en hover */
            }

            /* Para un efecto de transición más suave */
            #sidebar .nav-item, #sidebar .nav-link {
                transition: background-color 0.3s ease, color 0.3s ease;
            }
            /* Estilo para el dropdown-menu */
            #sidebar .dropdown-menu {
                background-color: #23322D; /* Asegúrate de mantener el fondo consistente con el sidebar */
                border: none; /* Opcional: elimina los bordes si no los quieres */
               
            }

                /* Hover para los elementos dentro del dropdown-menu */
                #sidebar .dropdown-menu .dropdown-item {
                    color: #fff; /* Color inicial del texto */
                    transition: background-color 0.3s ease, color 0.3s ease; /* Transición suave */
                }

                    /* Hover efecto */
                    #sidebar .dropdown-menu .dropdown-item:hover {
                        background-color: #5f955d; /* Color de fondo en hover */
                        color: #fff; /* Color del texto en hover */
                        border-radius: 5px; /* Opcional: agrega bordes redondeados */
                    }
    </style>

        <!-- Contenedor principal (incluye navbar y mainContent) -->
        <div id="mainContainer" class="flex-grow-1" style="transition: margin-left 0.3s; margin-left: 0; margin: 40px;">
            <!-- Navbar -->
            <header>
                <nav id="navbar" class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3"
                     style="background-color: #23322D; position: fixed; width: 100%; z-index: 1030; top: 0; left: 0; transition: margin-left 0.3s;">
                    <div class="container-fluid d-flex align-items-center" style="padding: 0;">
                        <!-- Botón SidebarToggle alineado a la izquierda -->
                        <button class="btn btn-success me-3 ms-3" id="sidebarToggle" type="button" style="margin-left: 15px;">☰</button>


                        <!-- Espaciador para empujar el título al centro -->
                        <div class="flex-grow-1 d-flex justify-content-center">
                            <!-- Título centrado -->
                            <a class="navbar-brand text-center" asp-area="" asp-controller="Home" asp-action="Index"
                               style="color: #A4E1AF; font-family: 'Brush Script MT', cursive; font-size: 2.5rem;">
                                Mirador del Bosque
                            </a>
                        </div>
                    <button class="btn btn-success m-2">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesion</a>
                            </button>
                    </div>
                   
                </nav>
            </header>


            <!-- Contenido principal -->
            <div id="mainContent" class="container pt-5">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
  @*  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script> *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    
   <script src="
https://cdn.jsdelivr.net/npm/chart.js@4.4/dist/chart.umd.min.js
"></script>  
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            const sidebar = document.getElementById('sidebar');
            const mainContainer = document.getElementById('mainContainer'); // Incluye navbar y mainContent
            const navbar = document.getElementById('navbar'); // Seleccionamos el nav

            if (sidebar.style.display === 'none' || sidebar.style.display === '') {
                // Mostrar el sidebar y mover todo el contenido hacia la derecha
                sidebar.style.display = 'block';
                mainContainer.style.marginLeft = '250px'; // Ajusta este valor al ancho del sidebar
                navbar.style.marginLeft = '250px'; // Mueve también el navbar
            } else {
                // Ocultar el sidebar y restaurar la posición del contenido
                sidebar.style.display = 'none';
                mainContainer.style.marginLeft = '0';
                navbar.style.marginLeft = '0'; // Restaura la posición del navbar
            }
        });
    </script>


</body>
</html>
