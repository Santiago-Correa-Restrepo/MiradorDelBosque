@model Ultima.Models.TipoServicio

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text text-center">Editar Tipo Servicio</h1>


<hr />
<div class="form-container">
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTipoServicio" />
            <div class="form-group">
                <label asp-for="NombreTipoServicio" class="control-label"></label>
                <input asp-for="NombreTipoServicio" class="form-control" />
                <span asp-validation-for="NombreTipoServicio" class="text-danger"></span>
            </div>
            <hr>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-secondary">Salir</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<link href="~/css/CrearStyle.css" rel="stylesheet" />